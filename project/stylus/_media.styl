@import "_vars.styl"

/*==========  Desktop First  ==========*/

/* Large Devices, Wide Screens */
@media (max-width : 1160px)
	.float-right.nav
		padding-top 3px

/* Medium Devices, Desktops */
@media (max-width : 992px)
	/**/

/* Small Devices, Tablets */
@media (max-width : 768px)
	.ui.accordion .title:not(.ui)
		font-size 18px
		line-height 26px
	.ui.accordion:not(.styled) .accordion .title~.content:not(.ui), .ui.accordion:not(.styled) .title~.content:not(.ui)
		font-size 18px
		line-height 26px
	.ui.accordion .accordion .active.title .dropdown.icon:after, .ui.accordion .active.title .dropdown.icon:after
		top 63%

/* Extra Small Devices, Phones */
@media (max-width : 480px)
	.ui.accordion .title:not(.ui) 
		padding 15px 40px 5px 15px
		font-size 16px
		line-height 24px
	.ui.accordion:not(.styled) .accordion .title~.content:not(.ui), .ui.accordion:not(.styled) .title~.content:not(.ui)
		padding 5px 15px 20px
		font-size 16px
		line-height 24px
	.ui.accordion .accordion .active.title .dropdown.icon:after, .ui.accordion .active.title .dropdown.icon:after
		top 50%


@media (max-width: 1160px) {
  .float-left.nav .item+.item {
    margin-left: 0;
  }
}

@media (max-width: 1160px)
	.ui.item.lang
		margin-right 5px
		margin-top 30px


@media (max-width: 1160px)
	.ui.dropdown.lang .menu
		margin-left 0 !important
		position relative
		z-index 2
	


@media (max-width: 998px) {
  .ui-item-img {
    display: none;
  }
  .ui-item img+p {
    padding: 0;
  }
}