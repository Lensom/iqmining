// FAQ PART

// HEADER
.float-left.nav .item a
  padding 8px 5px 8px 15px


.ui.button.register
	padding 10px 8px !important
.ui.button.login
	padding 10px 37px 

.ui.accordion .ui-item .title .dropdown.icon:after {
  content: '';
  display: block;
  position: absolute;
  right: 50%;
  top: 50%;
  margin: 0;
  border: none;
  width: 8px;
  height: 5px;
  background-image: url(../img/triangle.svg);
  border-bottom: none;
  border-left: none;
  transition: .3s ease-in-out;
  -webkit-transition: .3s ease-in-out;
  -moz-transition: .3s ease-in-out;
  -ms-transition: .3s ease-in-out;
  -o-transition: .3s ease-in-out;
}

.ui.accordion .title:not(.ui) {
  color: #515151;
  font-family: "Roboto";
  font-weight: 500;
  font-size: 20px;
  font-weight: 500;
  line-height: 30px;
  background-color: #ffffff;
}

.ui.accordion .accordion .title .dropdown.icon,
.ui.accordion .title .dropdown.icon {
  border-left: none;
}

.ui.accordion .title:not(.ui) {
  padding: 25px 100px 25px 30px;

}

.ui.accordion .title.active {
  margin-bottom: 0;
  padding-bottom: 0;
}

img.ui-item-img.hidden {
  float: right;
  bottom: 0;
  position: absolute;
  right: 20px;
}

.ui.accordion:not(.styled) .title~.content:not(.ui) p {
  line-height: 30px;
}

.ui-item img+p {
  padding-right: 310px;
}

.ui.accordion:not(.styled) .accordion .title~.content:not(.ui),
.ui.accordion:not(.styled) .title~.content:not(.ui) {
  background-color: #ffffff;
  color: #515151;
  font-family: "Roboto";
  font-size: 20px;
  font-weight: 300;
  line-height: 30px;
}

.ui-item {
  border-radius: 5px;
  box-shadow: 0 10px 30px rgba(145, 162, 172, 0.15);
  margin-bottom: 30px;
}

.ui.accordion .accordion .active.title .dropdown.icon:after,
.ui.accordion .active.title .dropdown.icon:after {
  /* transform: rotate(45deg); */
  border-top-color: #00a2ff;
  top: 72%;
}

.ui.accordion:not(.styled) .accordion .title~.content:not(.ui),
.ui.accordion:not(.styled) .title~.content:not(.ui) {
  padding: 7px 30px 20px;
  position: relative;
}

.ui-item-img
  position relative
  margin-top -55px


.dropdown-item a
	position relative
	&:after
		content ''
		position absolute
		width 0
		height 0
		border 5px solid transparent
		border-top-color #fff
		display inline-block
		right -10px
		top 16px

.ui.item.lang.dropdown-item 
	margin-right 0
	margin-top 0
	.menu 
		background-color #2b2d32
		padding 13px 0
		&:after 
			background #2b2d32
		a 
			margin-left 0
			color #ffffff
			font-size 16px
			font-weight 700
			line-height 26px
			text-transform uppercase
			&:after 
				display none
		.item 
			padding 4px 20px 3px !important
			&:hover 
				color #00a2ff

.ui.sidebar
	.dropdown-item
		display block
		a 
			width 100%
			display inline-block
			&:after 
				right 5px
				top 9px

.ui.sidebar.menu .ui.item.lang
	display block

.menu-none
	display none !important


// PAGE AUTO REINVESTING 
.goods
  margin-top 75px
  .list 
    margin-top 20px
    text-align center
    li
      text-align left
      display inline-block
      vertical-align middle
      opacity 0.5
      margin-top 60px
    li.act 
      opacity 1
    .g-item 
      width 235px
      background-color #fff
      padding 105px 20px 20px 20px
      position relative
    .or 
      margin 0 15px
      font-size 20px
      color #515151
      letter-spacing 0
      line-height 25px
      

.goods .list  .img{
    height: 184px;
    position: absolute;
    width: 100%;
    text-align: center;
    bottom: 120px;
    left: 0;
}
.goods .list  .img:after{
    content: '';
    display: inline-block;
    vertical-align: bottom;
    width: 0;
    height: 100%;
}
.goods .list  .img img{
    display: inline-block;
    vertical-align: bottom;
}
.goods .list .t1{
    font-size: 20px;
    color: #515151;
    letter-spacing: 0;
    line-height: 25px;
    font-weight: 300;
}
.goods .list .t2{
    font-size: 15px;
    color: #FF88AE;
    letter-spacing: 0;
    line-height: 20px;
    font-weight: 300;
}
.goods .list .gal{
    position: absolute;
    right: 20px;
    bottom: 20px;
    width: 24px;
    height: 24px;
    border-radius: 12px;
    border:1px solid #1C9EE1;
    cursor: pointer;
}



.goods .list .gal.act{
    background: #1C9EE1 url(../img/tick.svg) 50% / 70% no-repeat;
}

