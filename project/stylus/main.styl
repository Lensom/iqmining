.switch
  position relative
  width 56px
  height 30px
  border-radius 20px
  margin -3px auto 0
  background-color #CBCCCF
  text-align left
  padding 2px
  cursor pointer
  span 
    height 25px
    width 24px
    display inline-block
    background-color #fff
    border-radius 18px
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.3)
.switch.act
    text-align right
    background #00A2FF

.sl-wr
    padding 0 50px 0 60px
    position relative
    .tt
      font-size 14px
      color #2B2D32
      letter-spacing 0
      line-height 10px
      font-weight 300
      position absolute
      text-align left
      top -9px
      span 
        color #2b2d32
        font-family "Roboto", sans-serif
        font-size 12px
        font-weight 300
      b 
        color #cbcccf
        letter-spacing 0
        line-height 24px
        font-weight 700
        font-size 12px

    #amount,
    #amount2,
    #amount3,
    #amount4,
    #amount5,
    #amount6,
    #amount7,
    #amount8
      font-size 20px
      .nn
        font-size 12px  

.sl-wr 
  .tt1
    left 0
  .tt2
    right 0

.ui-widget.ui-widget-content, .ui-slider .ui-slider-range
  border-radius 10px !important

.ui-slider
  .ui-slider-handle
    background  url(../img/scroll.svg) 0 0 no-repeat  !important
    border 0 !important
    width 24px !important
    height 24px !important
    top -.4em !important
    cursor pointer

.ui-widget-header
  background-color #cbcccf !important

.ui-widget.ui-widget-content
  height 10px
  border none !important
  background-color #eef4f7
.ui-slider-horizontal .ui-slider-range
  height 10px

span.ui-slider-handle.ui-corner-all.ui-state-default
  &:focus 
    outline none 

.current 
  .sl-wr
    .tt
      b
        color #00A2FF
  .ui-widget-header
    background-color #00a2ff !important
  .auto-amount 
    background-color #f6fafc

.ui-state-disabled, .ui-widget-content .ui-state-disabled, .ui-widget-header .ui-state-disabled
  opacity 1


.owl-auto
  margin-top 70px
  display none !important

